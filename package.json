{
  "name": "quotes",
  "version": "0.0.0",
  "scripts": {
    "firebase": "firebase",
    "cypress": "cypress",
    "webpack-bundle-analyzer": "webpack-bundle-analyzer ./dist/quotes/stats-es2015.json",
    "prebuild": "ts-node -O '{\"module\": \"commonjs\"}' ./scripts/write-env-config.ts",
    "ng": "ng",
    "start": "yarn prebuild && ng serve",
    "start:prod": "yarn prebuild && ng serve --configuration='production'",
    "build": "yarn prebuild && ng build",
    "build:prod": "yarn prebuild && ng build --configuration='production'",
    "serve": "lite-server & wait-on http://localhost:4200",
    "lint": "ng lint",
    "ngcc": "ngcc --properties es2015 browser module main --first-only --create-ivy-entry-points",
    "publish-env": "ts-node -O '{\"module\": \"commonjs\"}' ./scripts/publish-env.ts",
    "test": "cypress run",
    "test:open": "cypress open",
    "test:ci": "cypress run --record",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:hosting": "firebase deploy --only firestore:hosting",
    "deploy": "firebase deploy",
    "generate-manifest-assets": "npx pwa-asset-generator ./src/assets/quotes.svg ./src/assets/icons -m ./src/manifest.webmanifest -i ./src/index.html"
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "tslint --project tsconfig.json --fix",
      "pretty-quick",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^9.0.0",
    "@angular/cdk": "^9.0.0",
    "@angular/common": "^9.0.0",
    "@angular/compiler": "^9.0.0",
    "@angular/core": "^9.0.0",
    "@angular/fire": "^5.2.3",
    "@angular/flex-layout": "^9.0.0-beta.29",
    "@angular/forms": "^9.0.0",
    "@angular/material": "^9.0.0",
    "@angular/platform-browser": "^9.0.0",
    "@angular/platform-browser-dynamic": "^9.0.0",
    "@angular/router": "^9.0.0",
    "@angular/service-worker": "^9.0.0",
    "@semantic-release/git": "^9.0.0",
    "dotenv": "^8.2.0",
    "firebase": "^7.14.6",
    "lodash.clonedeep": "^4.5.0",
    "ng-inline-svg": "^10.0.0",
    "ng-navigator-share": "^1.0.4",
    "rxjs": "^6.5.4",
    "semantic-release": "^19.0.3",
    "tslib": "^1.10.0",
    "zone.js": "^0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.901.6",
    "@angular/cli": "^9.1.6",
    "@angular/compiler-cli": "^9.1.7",
    "@angular/language-service": "^9.1.7",
    "@types/jasmine": "^3.5.0",
    "@types/jasminewd2": "^2.0.3",
    "@types/node": "^14.0.1",
    "codelyzer": "^5.1.2",
    "cypress": "^4.1.0",
    "cypress-firebase": "^1.2.0",
    "firebase-admin": "^8.12.1",
    "firebase-tools": "^8.4.1",
    "husky": "^4.2.5",
    "jasmine-core": "^3.4.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^5.0.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^3.0.2",
    "karma-jasmine": "^3.1.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "lint-staged": "^10.2.2",
    "lite-server": "^2.5.4",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "ts-node": "^8.9.1",
    "tslint": "^6.1.2",
    "typescript": "<3.8",
    "wait-on": "^5.0.1",
    "webpack-bundle-analyzer": "^3.6.0"
  }
}
