{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["node_modules/@types"]
  },
  "compileOnSave": true,
  "skipLibCheck": true,
  "exclude": ["**/node_modules", "node_modules", "functions"],
  "include": ["src/**/*.ts"]
}
